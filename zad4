#include <stdio.h>
int main(void)
{
    float number;
    printf("Введите значение с плавающей запятой: ");
    scanf("%f", &number);
    printf("Запись с фиксированной запятой: %f\n", number);
    printf("Экспонтециальная форма: %e\n", number);
    printf("Двоично-экспантециальное представление: %a\n", number);
    getchar();
    return 0;
}
